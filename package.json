{
  "name": "noteconnect",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start:backend": "npm --workspace packages/backend run start",
    "start:frontend": "npm --workspace packages/frontend run dev",
    "start:proxy": "npm --workspace packages/proxy run start",

    "start": "concurrently -n \"BACK,FRONT,PROXY\" -c \"blue,green,magenta\" \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:proxy\"",

    "clean": "node scripts/clean.js"
  },
  "workspaces": [
    "packages/*",
    "models",
    "utils"
  ],
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
